generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int           @id @default(autoincrement())
  email          String        @unique
  name           String
  password       String
  rol            String
  booking        Booking[]
  professionalId Int?          @unique
  professional   Professional? @relation(fields: [professionalId], references: [id])
}

model Professional {
  id       Int       @id @default(autoincrement())
  name     String
  lastName String
  phone    String
  userId   Int       @unique
  user     User?
  services Service[]
  booking  Booking[]
}

model Service {
  id             Int           @id @default(autoincrement())
  title          String
  description    String
  photos         String[]
  category       String
  contact        String
  booking        Booking[]
  professionalId Int?
  professional   Professional? @relation(fields: [professionalId], references: [id])
}

model Booking {
  id                 Int                 @id @default(autoincrement())
  //date               DateTime
  userId             Int                 @unique
  user               User                @relation(fields: [userId], references: [id])
  IsActive           Boolean
  serviceId          Int                 @unique
  service            Service             @relation(fields: [serviceId], references: [id])
  professionalId     Int                 @unique
  professional       Professional        @relation(fields: [professionalId], references: [id])
  professionalReview ProfessionalReview?
  serviceReview      ServiceReview?
}

model ProfessionalReview {
  id        String  @id @default(cuid())
  rating    Int
  comment   String
  bookingId Int     @unique
  booking   Booking @relation(fields: [bookingId], references: [id])
}

model ServiceReview {
  id        String  @id @default(cuid())
  rating    Int
  comment   String
  bookingId Int     @unique
  booking   Booking @relation(fields: [bookingId], references: [id])
}
